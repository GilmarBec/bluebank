
<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :cep %>

    <%= f.input :state %>

    <%= f.input :city %>

    <%= f.input :district %>

    <%= f.input :street %>

    <%= f.input :number %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
